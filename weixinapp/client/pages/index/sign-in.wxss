}
form input{
  width: 450rpx;
  border:1rpx solid #ddd;
  height:70rpx;
  margin: 50rpx auto 0; 
  padding-left:20rpx;
  color: #ddd;
}
.notive{
  width: 450rpx;
  margin:50rpx auto 0;
  font-size: 30rpx;
