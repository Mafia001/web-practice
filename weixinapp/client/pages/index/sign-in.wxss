}
.sign-in{
  width:500rpx;
  height:900rpx;
  overflow: hidden;
  margin:60rpx auto 0;
}
.sign-in-top{
  background:#07a1ff;
  text-align: center;
}
.sign-in-top text{
  color: #fff;
}
.sign-in-top-big{
